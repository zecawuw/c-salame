// preencer um vetor cm 3 nomes e mostrar quantas letras A e E tem nos 3 nomes

#include <stdio.h>

int main()
{
   int x,m;
   char nome[3][30], conta=0, conte=0, tam=0;
   
   for(x=0;x<3;x++){
       printf("\n digite um nome: ");
       scanf("%c",nome[x]);
   }
   for(x=0;x<3;x++){
       if(nome[x][m] == 'A' || nome[x][m] == 'a')
       conta++;
       if(nome[x][m] == 'E' || nome[x][m] == 'e')
       conte++;
   }
   
   printf("Nos nomes distintos tem %d Letras A e %d de Letras E", conta, conte);
   printf("\n\n");
   
   system("pause");
   return 0;
